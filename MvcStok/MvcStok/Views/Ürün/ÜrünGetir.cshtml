@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "ÜrünGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UrunGuncelle", "Ürün", FormMethod.Post))
{
    <h2>Kategori Güncelleme</h2>
    @Html.HiddenFor(x => x.İD, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.MARKA, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.STOK, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.ALISFIYAT, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.SATISFIYAT, new { @class = "form-control" })
    <br />
    @Html.DropDownListFor(x => x.TBLKATEGORİ.İD, (List<SelectListItem>)ViewBag.urunkategori, new { @class = "form-control" })
    <br />

    <button class=" btn btn-info">Güncelle</button>
}
