@model MvcStok.Models.Entity.TBLMUSTERİ
@{
    ViewBag.Title = "YeniMüsteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h2>Yeni Ürün Ekleme</h2>
    <br />
    <label>Müşteri Adı:</label>
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:yellow" })
    <br />
    <label>Soyad:</label>
    @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SOYAD, "", new { @style = "color:red" })
    <br />
    <label>Şehir:</label>
    @Html.TextBoxFor(x => x.SEHİR, new { @class = "form-control" })
    <br />
    <label>Bakiye:</label>
    @Html.TextBoxFor(x => x.BAKIYE, new { @class = "form-control" })
    <br />
    <button class=" btn btn-info">Kaydet</button>
</form>



